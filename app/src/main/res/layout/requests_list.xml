<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:background="@drawable/border_bottom_view">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:src="@drawable/placeholder_avatar"
            android:id="@+id/dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="0dp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_list_1"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/name"
            android:paddingStart="10dp"
            android:paddingBottom="2dp"
            android:paddingEnd="10dp"
            android:paddingTop="2dp"
            android:layout_marginStart="20dp">
            <TextView
                android:id="@+id/dicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visitor_icon_list"
                android:fontFamily="@font/lineicons"
                android:textColor="@color/colorPlain"
                android:textSize="12sp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/counts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/dicon"
                android:layout_marginStart="2dp"
                android:textColor="@color/colorPlain"
                android:fontFamily="@font/poppins_light"
                android:textSize="13sp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginStart="90dp"
            android:layout_marginTop="3dp">
            <TextView
                android:id="@+id/occupation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/poppins_light"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:background="@drawable/list_button"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"/>
            <TextView
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/poppins_light"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/occupation"
                android:layout_marginStart="10dp"
                android:background="@drawable/list_button"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"/>
            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/poppins_light"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:background="@drawable/list_button"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="3dp"
                android:layout_toEndOf="@+id/gender"
                android:layout_marginStart="10dp"
                android:paddingTop="3dp"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>