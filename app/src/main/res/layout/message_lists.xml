<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/simpleDark"
        android:fontFamily="@font/poppins_light"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/date"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forMe"
        android:background="@drawable/vector_gradient_anm_3"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="100dp"
        android:orientation="vertical"
        android:layout_gravity="end">
        <TextView
            android:id="@+id/msgMe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hgff jfgmf djgd dbd djhmd djmbd djbmd djmbd djmbd dbd dnbgd ndmbd dbd jmdbdm dnkd,nd snbm"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingBottom="0dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorPlain"
            android:fontFamily="@font/poppins_light"
            android:textSize="15sp"
            android:textStyle=""
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="2days ago"
            android:paddingTop="0dp"
            android:paddingBottom="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:id="@+id/timeMe"
            android:fontFamily="@font/poppins_light"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/colorBody"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forOther"
        android:background="@drawable/vector_2_chat"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:layout_gravity="start"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hgff jfgmf djgd dbd djhmd djmbd djbmd djmbd djmbd dbd dnbgd ndmbd dbd jmdbdm dnkd,nd snbm"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingBottom="0dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorAccent"
            android:fontFamily="@font/poppins_light"
            android:id="@+id/msgOther"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/timeOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="2days ago"
            android:paddingTop="0dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingBottom="5dp"
            android:fontFamily="@font/poppins_light"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/simpleDark"/>

    </LinearLayout>
</LinearLayout>