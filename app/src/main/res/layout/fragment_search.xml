<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="20dp"
    android:paddingTop="0dp"
    tools:context=".sponsor.ui.SearchFragment">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="-1dp"
        android:background="@drawable/border_bottom_view">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="12dp"
            android:paddingStart="0dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/back_icon"
                android:fontFamily="@font/lineicons"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:layout_centerVertical="true"
                android:id="@+id/back"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/poppins_light"
                android:textSize="17sp"
                android:textStyle="bold"
                />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical"
        android:id="@+id/searchView"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="15sp"
                android:paddingTop="15sp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Search by name or email address"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:background="@drawable/send_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:inputType="text"
                        android:gravity="top|start"
                        android:padding="10dp"
                        android:maxLines="10"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="15sp"
                        android:textAlignment="textStart"
                        android:textColor="@color/simpler"
                        android:id="@+id/search"
                        android:scrollbars="vertical"
                        android:maxLength="500"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_icon"
                        android:paddingTop="20dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/lineicons"
                        android:textSize="20sp"
                        android:layout_centerVertical="true"
                        android:id="@+id/filter"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:id="@+id/filter_view"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="15sp"
                android:paddingTop="15sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_icon"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/lineicons"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:id="@+id/searchb"/>
                <Spinner
                    android:background="@drawable/send_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:padding="10dp"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:textColor="@color/simpler"
                    android:spinnerMode="dialog"
                    android:id="@+id/filter_category"
                    android:entries="@array/categories_filter"
                    android:scrollbars="vertical"/>
                <Spinner
                    android:background="@drawable/send_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:textColor="@color/simpler"
                    android:spinnerMode="dialog"
                    android:id="@+id/filter_gender"
                    android:entries="@array/genders_filter"
                    android:scrollbars="vertical"/>
                <Spinner
                    android:background="@drawable/send_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:textColor="@color/simpler"
                    android:spinnerMode="dialog"
                    android:id="@+id/filter_occupation"
                    android:prompt="@string/select_occupation"
                    android:entries="@array/occupations_filter"
                    android:scrollbars="vertical"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/second_gradient_anm_2"
        android:text="PROCEED"
        android:textColor="@color/colorPlain"
        android:fontFamily="@font/poppins_light"
        android:textSize="17sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/proceed"
        android:layout_marginBottom="?attr/actionBarSize"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>