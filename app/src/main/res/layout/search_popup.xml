<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/card_bg_2"
    android:paddingBottom="20dp"
    android:paddingTop="0dp"
    android:elevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:id="@+id/searchView"
        android:visibility="gone">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="15sp"
                    android:paddingTop="15sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Search by name or email address"
                        android:textSize="17sp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:background="@drawable/send_btn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:inputType="text"
                            android:gravity="top|start"
                            android:padding="10dp"
                            android:maxLines="10"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="15sp"
                            android:textAlignment="textStart"
                            android:textColor="@color/simpler"
                            android:id="@+id/search"
                            android:scrollbars="vertical"
                            android:maxLength="500"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/filter_icon"
                            android:paddingTop="20dp"
                            android:paddingBottom="10dp"
                            android:paddingStart="12dp"
                            android:paddingEnd="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:layout_alignParentEnd="true"
                            android:fontFamily="@font/lineicons"
                            android:textSize="20sp"
                            android:layout_centerVertical="true"
                            android:id="@+id/filter"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/second_gradient_anm_2"
            android:text="@string/help_now"
            android:textColor="@color/colorPlain"
            android:fontFamily="@font/poppins_light"
            android:textSize="17sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/proceed"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            />
        <TextView
            android:id="@+id/close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_light"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@color/simpler"
            android:text="Close"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/filter_view"
        android:orientation="vertical"
        android:elevation="30dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingBottom="15sp"
                    android:paddingTop="15sp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Filter by:"
                        android:textSize="17sp"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        />
                    <Spinner
                        android:background="@drawable/send_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="15sp"
                        android:textColor="@color/simpler"
                        android:spinnerMode="dialog"
                        android:id="@+id/filter_category"
                        android:prompt="@string/select_category"
                        android:entries="@array/categories"
                        android:scrollbars="vertical"/>
                    <Spinner
                        android:background="@drawable/send_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="15sp"
                        android:textColor="@color/simpler"
                        android:spinnerMode="dialog"
                        android:id="@+id/filter_gender"
                        android:prompt="@string/select_gender"
                        android:entries="@array/genders"
                        android:scrollbars="vertical"/>
                    <Spinner
                        android:background="@drawable/send_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:padding="10dp"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="15sp"
                        android:textColor="@color/simpler"
                        android:spinnerMode="dialog"
                        android:id="@+id/filter_occupation"
                        android:prompt="@string/select_occupation"
                        android:entries="@array/genders"
                        android:scrollbars="vertical"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/second_gradient_anm_2"
            android:text="FILTER"
            android:textColor="@color/colorPlain"
            android:fontFamily="@font/poppins_light"
            android:textSize="17sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/filterNow"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            />
        <TextView
            android:id="@+id/close2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins_light"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="@color/simpler"
            android:text="Close"/>

    </LinearLayout>


</RelativeLayout>