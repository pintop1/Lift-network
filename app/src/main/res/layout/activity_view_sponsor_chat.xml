<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewSponsorChat">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="0dp"
                    android:paddingBottom="15dp"
                    android:background="@drawable/border_bottom_view">
                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="match_parent"
                        android:layout_height="420dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textStart"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="20sp"
                        android:layout_marginTop="12dp"
                        android:id="@+id/name"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="@font/poppins_light"
                            android:textSize="14sp"
                            android:layout_marginTop="5dp"
                            android:id="@+id/location"
                            android:layout_centerVertical="true"
                            />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/gradient_list_1"
                            android:layout_toEndOf="@+id/location"
                            android:layout_marginStart="10dp"
                            android:layout_centerVertical="true"
                            android:padding="5dp">
                            <TextView
                                android:id="@+id/dicon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/age_icon"
                                android:fontFamily="@font/lineicons"
                                android:textColor="@color/colorPlain"
                                android:textSize="12sp"
                                android:layout_centerVertical="true"/>
                            <TextView
                                android:id="@+id/age"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@+id/dicon"
                                android:layout_marginStart="2dp"
                                android:textColor="@color/colorPlain"
                                android:fontFamily="@font/poppins_light"
                                android:textSize="13sp"
                                android:layout_centerVertical="true"
                                />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="15dp"
                android:background="@drawable/border_bottom_view"
                android:paddingTop="15sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_me"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/colorAccent"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:textAlignment="textStart"
                    android:textColor="@color/simpler"
                    android:id="@+id/about"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="15sp"
                android:paddingTop="15sp"
                android:background="@drawable/border_bottom_view">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gender"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:textColor="@color/simpler"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="15sp"
                    android:id="@+id/gender"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="15sp"
                android:paddingTop="15sp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/occupation"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/simpler"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:textSize="15sp"
                    android:id="@+id/occupation"
                    android:textAlignment="textEnd"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>